<div class="form-container">
  <%= form_for(@city) do |f| %>
    <% if @city.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

        <ul>
        <% @city.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :country %><br />
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :trip_id %><br />
      <%= f.number_field :trip_id %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
<fieldset>
  <%= f.label :name, "City" %>
  <%= f.text_field :name %>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove City from Trip" %>
  <%= f.fields_for :cities do |builder| %>
    <%= render 'itenerary_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Activity", f, :iteneraries %>
</fieldset>